{
    "ecmaFeatures": {
        "blockBindings": true
    },
    "rules": {
        "indent": [
            0
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": false,
        "no-console": false
    },
    "env": {
        "browser": true
    },
    "globals": {
        "Phaser": true,
        "otsimo": true
    },
    "extends": "eslint:recommended"
}